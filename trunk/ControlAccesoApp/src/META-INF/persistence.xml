<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="ControlAccesoAppPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>py.gov.itaipu.controlacceso.model.Motivo</class>
    <class>py.gov.itaipu.controlacceso.model.Antecedente</class>
    <class>py.gov.itaipu.controlacceso.model.Visita</class>
    <properties>
      <property name="hibernate.connection.username" value="controlacceso"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.password" value="controlacceso"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/controlaccesodb"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.default_schema" value="controlacceso"/>
    </properties>
  </persistence-unit>
</persistence>
